{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2023"],

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "outDir": "./dist",
    "sourceMap": true,
    "removeComments": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,

    // THESE THREE LINES WERE KILLING YOU → either delete them or set to false
    "verbatimModuleSyntax": false,
    "isolatedModules": false,
    "moduleDetection": "auto"

    // you can keep the rest commented or deleted – they are not needed for a bot
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["node_modules", "dist"]
}